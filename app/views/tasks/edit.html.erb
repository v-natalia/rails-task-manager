<h1>Edit a task</h1>
<div class="container">
  <%= form_for(@task) do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control', placeholder: "Title" %>
    </div>

    <div class="form-group">
      <%= f.label :details %>
      <%= f.text_field :details, class: 'form-control', placeholder: "Details" %>
    </div>

    <div class="form-group">
      <span><%=f.check_box :completed%>Completed</span>
    </div>

  <%= f.submit class: 'btn btn-success' %>
  <% end %>

  <p>
    <%= link_to 'tasks', tasks_path %>
  </p>
</div>

