<h1>Add a new task</h1>
<div class="container">
  <%= form_for(@task) do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control', placeholder: "Title" %>
    </div>

    <div class="form-group">
      <%= f.label :details %>
      <%= f.text_field :details, class: 'form-control', placeholder: "Details" %>

    </div>
  <%= f.submit class: 'btn btn-success' %>

  <% end %>
<%= link_to 'Go to see the list of tasks', tasks_path %>
</div>
